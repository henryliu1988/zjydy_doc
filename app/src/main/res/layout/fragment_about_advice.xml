<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout_back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_text2"
            android:text="请描述您的问题和意见" />

        <EditText
            android:id="@+id/advice_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_eeeeee_corner"
            android:gravity="top"
            android:textSize="14sp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/black_text1"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black_text2"
            android:text="联系电话" />

        <EditText
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_eeeeee_corner"
            android:textSize="14sp"
            android:inputType="number"
            android:paddingTop="10dp"
            android:textColor="@color/black_text"
            android:textColorHint="@color/black_text2"
            android:hint="选填，便于我们与您联系"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_confirm_btn_bg"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white_text"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />
</LinearLayout>
