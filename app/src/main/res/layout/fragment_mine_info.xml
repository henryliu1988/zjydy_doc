<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <include layout="@layout/titlebar_layout_back"/>

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white_bg"
        android:gravity="center_vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:text="头像"
            android:textColor="@color/black_text" />

        <ImageView
            android:id="@+id/item_more_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_turn" />

        <ImageView
            android:id="@+id/user_photo"
            android:layout_toLeftOf="@id/item_more_flag"
            android:layout_marginRight="15dp"
            android:layout_width="55dp"
            android:layout_centerVertical="true"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/photo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_bg"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/black_text"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/user_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text2"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/item_turn"
                android:drawablePadding="15dp"
                android:textSize="15dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/div_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/user_sex_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/black_text"
                android:layout_alignParentLeft="true"
                android:textSize="15dp"
                android:layout_centerVertical="true" />
            <com.zhjydy.view.zhview.MapTextView
                android:id="@+id/user_sex_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/black_text2"
                android:drawableRight="@mipmap/item_turn"
                android:drawablePadding="15dp"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft = "12dp"
        android:layout_marginRight = "12dp"
        android:textColor="@color/white_text"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_red_corner"
        android:text="退出登录"
        />
</LinearLayout>