<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_bg">

    <include
        android:id="@+id/titlebar_layout"
        layout="@layout/titlebar_layout_back"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_red_corner"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="退出登录"
        android:textColor="@color/white_text"
        android:textSize="16sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/logout"
        android:layout_below="@id/titlebar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/user_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white_bg"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textColor="@color/black_text"
                    android:textSize="15dp"/>

                <ImageView
                    android:id="@+id/item_more_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/item_turn"/>

                <ImageView
                    android:id="@+id/user_photo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/item_more_flag"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/photo"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white_bg"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/user_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="用户名"
                        android:textColor="@color/black_text"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/user_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="15dp"
                        android:drawableRight="@mipmap/item_turn"
                        android:textColor="@color/black_text2"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/user_sex_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="性别"
                        android:textColor="@color/black_text"
                        android:textSize="15dp"/>

                    <com.zhjydy_doc.view.zjview.MapTextView
                        android:id="@+id/user_sex_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="15dp"
                        android:drawableRight="@mipmap/item_turn"
                        android:text="性别"
                        android:textColor="@color/black_text2"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="联系方式"
                        android:textColor="@color/black_text"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tel_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="15dp"
                        android:drawableRight="@mipmap/item_turn"
                        android:textColor="@color/black_text2"
                        android:textSize="15dp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/div_line"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:text="*专家相互关注后会公开您的联系方式"
                android:textColor="@color/mine_info_value"
                android:textSize="12sp"/>


            <LinearLayout
                style="@style/item_info_read_singleline"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/domain_title"
                    style="@style/item_info_read_singleline_title"
                    android:text="地区"/>

                <com.zhjydy_doc.view.zjview.MapTextView
                    android:id="@+id/domain_value"
                    style="@style/item_info_read_click_singleline_value"/>
            </LinearLayout>

            <View style="@style/item_info_div_line"/>

            <LinearLayout style="@style/item_info_read_singleline">

                <TextView
                    android:id="@+id/hospital_title"
                    style="@style/item_info_read_singleline_title"
                    android:text="所属医院"/>

                <com.zhjydy_doc.view.zjview.MapTextView
                    android:id="@+id/hospital_value"
                    style="@style/item_info_read_click_singleline_value"/>
            </LinearLayout>

            <View style="@style/item_info_div_line"/>

            <LinearLayout style="@style/item_info_read_singleline">

                <TextView
                    android:id="@+id/depart_title"
                    style="@style/item_info_read_singleline_title"
                    android:text="科室"/>

                <com.zhjydy_doc.view.zjview.MapTextView
                    android:id="@+id/depart_value"
                    style="@style/item_info_read_click_singleline_value"/>
            </LinearLayout>
            <View style="@style/item_info_div_line"/>

            <LinearLayout style="@style/item_info_read_singleline">

                <TextView
                    android:id="@+id/business_title"
                    style="@style/item_info_read_singleline_title"
                    android:text="职称"/>

                <com.zhjydy_doc.view.zjview.MapTextView
                    android:id="@+id/business_value"
                    style="@style/item_info_read_click_singleline_value"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/job_layout"
                style="@style/item_info_read_mutiline"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="社会任职"
                        android:textColor="@color/black_text"
                        android:textSize="15dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/item_turn"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/job_value"
                    style="@style/item_info_edit_mutiline_value"
                    android:lines="2"/>
            </LinearLayout>

            <View style="@style/item_info_div_line"/>

            <LinearLayout
                android:id="@+id/zhuangchang_layout"
                style="@style/item_info_read_mutiline">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/zhuanchang_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="专业擅长"
                        android:textColor="@color/black_text"
                        android:textSize="15dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/item_turn"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/zhuanchang_value"
                    style="@style/item_info_edit_mutiline_value"
                    android:lines="2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>