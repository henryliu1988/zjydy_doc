<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_bg"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="8dp"
    android:baselineAligned="false"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:paddingLeft="4dp">
        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/titlebar_back" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/title_search_ly"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/title_search_ly_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@mipmap/titlebar_search_samall"
            />
        <EditText
            android:id="@+id/title_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:lines="1"
            android:singleLine="true"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/edit_hint_text_color"
            android:imeOptions="actionSearch"
            android:textColor="@color/white_text"
            android:textSize="14sp" />
    </LinearLayout>


    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
</LinearLayout>