<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/gray_bg"
    android:layout_height="match_parent">
    <include layout="@layout/titlebar_layout_back_search"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/expert_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@color/white_bg"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家"
            android:textSize="14sp"
            android:textColor="@color/black_text2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_line"/>
        <LinearLayout
            android:id="@+id/expert_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/expert_more_layout"
            android:paddingLeft="5dp"
            android:paddingRight="13dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/div_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多专家"
                android:drawableLeft="@mipmap/search_1"
                android:layout_centerVertical="true"
                android:drawablePadding="6dp"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:textColor="#4264C8" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_1"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/info_all_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:background="@color/white_bg"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资讯"
            android:textSize="14sp"
            android:textColor="@color/black_text2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/div_line"/>

        <LinearLayout
            android:id="@+id/info_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/info_more_layout"
            android:paddingLeft="5dp"
            android:paddingRight="13dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/div_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多资讯"
                android:drawableLeft="@mipmap/search_1"
                android:layout_centerVertical="true"
                android:drawablePadding="6dp"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:textColor="#4264C8" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/right_1"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <include layout="@layout/null_data_layout"/>

</LinearLayout>